CC = gcc
SRC = main.c school.c
OBJ = $(SRC:c=o)
NAME = school
RM = rm -f

all:$(OBJ)
    $(CC) $(SRC) -o $(NAME)

/*handling emacs represented with *~ whiel executables are in form of
    $(NAME)*/

clean:
    $(RM) *~ $(NAME)

clean:
    $(RM) $(OBJ)

/*integrating functionality of the two cleans*/

fclean: clean oclean

/*combine clean and all*/

re: fclean all
